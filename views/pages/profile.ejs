<%- include('../partials/header') %> 
<div class='profile-page'>
    <div class='profile-page--banner'></div>
    <div class='profile-page__user'>
        <img src="<%= user.avatarUrl %> " alt="<%= user.name %>'s avatar " class='profile-page__user--avatar'>
        <h2><%= user.name %> </h2>
    </div>
    <div class='profile-page__friends'>
         <h3><%= user.name %>'s Friends </h3>
        <ul class='profile-page__friends--list'>
            <% friendsList.forEach( friend => { %>
                <li class='friend'>
                    <img src="<%= friend.avatarUrl %> " alt="<%= friend.name %>'s avatar ">
                    <p><%= friend.name %> </p>
                </li>
            <% }); %> 
        </ul>
    </div>
    
</div>
<%- include('../partials/footer') %> 